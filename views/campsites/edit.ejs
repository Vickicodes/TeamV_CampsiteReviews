<%- include("../partials/header") %>

<div class="container">
    <div class="">
        <h1 class="text-center">Edit <%= campsite.name %> </h1>
        <form action="/campsites/<%= campsite._id %>?_method=PUT " method="POST">
            <div class="form-group">
                <label for="campsite[name]">Campsite Name</label>
                <input class="form-control" type="text" name="campsite[name]" value="<%= campsite.name %>">
            </div>
            <div class="form-group">
                <label for="campsite[location]">Campsite Location</label>
                <input class="form-control" type="text" name="campsite[location]" value="<%= campsite.location %>">
            </div>
            <div class="form-group">
                <label for="campsite[price]">Average price per night</label>
                <input class="form-control" type="number" name="campsite[price]" value="<%= campsite.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="campsite[description]">Campsite Description</label>
                <input class="form-control" type="text" name="campsite[description]" value="<%= campsite.description %>">
            </div>
            <div class="form-group">
                <label for="campsite[image]">Image url</label>
                <input class="form-control" type="text" name="campsite[image]" value="<%= campsite.image %>">
            </div>
            <div class="form-group">
                <label for="campsite[image]">Campsite url</label>
                <input class="form-control" type="text" name="campsite[url]" value="<%= campsite.url %>">
            </div>
            <div class="form-group">
                <input class="btn btn-outline-primary btn-block" type="submit">
            </div> 
        </form>
    </div>
    <a href="/campsites">Back to list</a>
</div>


<%- include("../partials/footer") %>