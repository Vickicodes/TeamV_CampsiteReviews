<%- include("../partials/header") %>

<div class="container">
    <div>
        <h1 class="text-center">Add a new campsite</h1>
        <form action="/campsites" method="POST">
            <div class="form-group">
                <label for="name">Campsite Name</label>
                <input class="form-control" type="text" name="name" placeholder="Campsite name" required>
            </div>
            <div class="form-group">
                <label for="location">Campsite Location</label>
                <input class="form-control" type="text" name="location" placeholder="Campsite Location" required>
            </div>
            <div class="form-group">
                <label for="price">Average price per night</label>
                <input class="form-control" type="number" name="price" placeholder="Average price per night" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="description">Campsite Description</label>
                <input class="form-control" type="text" name="description" placeholder="Campsite Description">
            </div>
            <div class="form-group">
                <label for="image">Image url</label>
                <input class="form-control" type="text" name="image" placeholder="Image url">
            </div>
            <div class="form-group">
                <label for="image">Campsite url</label>
                <input class="form-control" type="text" name="url" placeholder="Image url">
            </div>
            <div class="form-group">
                <input class="btn btn-outline-primary btn-block" type="submit">
            </div> 
        </form>
    </div>
    <a href="/campsites">Back to list</a>
</div>


<%- include("../partials/footer") %>