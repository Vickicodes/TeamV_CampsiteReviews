<%- include("../partials/header") %>

<div class="container">
    <div>
        <h1 class="text-center py-3">Edit your comment</h1>
        <form action="/campsites/<%= campsite_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment[text]">Comment</label>
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-primary btn-block" type="submit">
            </div> 
        </form>
    </div>
    <a href="/campsites">Back to list</a>
</div>


<%- include("../partials/footer") %>